<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user === undefined){ %>
      <form class="form-inline d-flex justify-content" method="GET" action="/register">
        <button type="submit" class="btn btn-light mr-2">Register</button>
        <button type="submit" formaction="/login" class="btn btn-light">Login</button>
      </form>
      <% } else { %>
        <form class="form-inline d-flex justify-content-end" method="POST" action="/logout">
          <p class="h6 mb-0 mr-2">Logged in as: <%=user.email %>!
          </p>
          <button type="submit" class="btn btn-outline-dark" formmethod="POST" formaction="/logout">Logout</button>
        </form>
        <% } %>
  </nav>
</header>