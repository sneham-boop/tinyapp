<%- include('partials/_header') %>
  <main style="margin: 1em;">
    <%- include('partials/_permission') %>
    <% if( showURLs ) { %>
    <h3>Tiny URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url in urls) { %>
          <tr>
            <td>
              <%= url %>
            </td>
            <td>
              <%= urls[url].longURL %>
            </td>
            <td>
              <form method="GET" action="/urls/<%=url%>">
                <button type="submit" name="shortURL" class="btn btn-outline-primary">
                  Edit
                </button>
              </form>
            </td>
            <td>
              <form method="POST" action="/urls/<%=url%>/delete">
                <button type="submit" name="shortURL" class="btn btn-outline-danger">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
    <% if(numberOfURLs === 0) { %>
      <p id="no-urls" class="text-center">You currently have no tiny URLs. Create a tiny URL!</p>
    <% } %>
    <% } %>
    
  </main>
  <%- include('partials/_bootstrap_scripts') %>
    </body>

    </html>